{== Call-by-name functions ==}

r₁ : eval(lam λx. E x) ->> return(lam E).
r₂ : eval(app E₁ E₂) ->> comp(app₁ E₂) • eval(E₁).
r₃ : comp(app₁ E₂) • return(lam (λx. E₁' x)) ->> eval(E₁' E₂).

